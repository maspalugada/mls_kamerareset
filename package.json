{
  "name": "multimedia-studio",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.example.multimediastudio",
    "productName": "Multimedia Studio",
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
